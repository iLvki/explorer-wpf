<Page
    x:Class="odkrywca.Pages.ContinentInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:odkrywca.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="675"
    d:DesignWidth="1200"
    Background="LightBlue"
    FontFamily="Comfortaa"
    WindowTitle=""
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Padding="20,40"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Opacity="0.8">
            <Hyperlink
                Click="Stop"
                Foreground="Black"
                NavigateUri="Map.xaml">
                &lt;&lt; Powrót do mapy
            </Hyperlink>
        </Label>

        <Label
            x:Name="title"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="36"
            FontWeight="UltraBold" />

        <TextBlock
            x:Name="info"
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Margin="30"
            Padding="20,0,20,0"
            FontSize="30"
            TextAlignment="Justify"
            TextWrapping="Wrap" />

        <Label
            x:Name="imgInfo"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="40,0,0,0"
            VerticalContentAlignment="Top"
            FontSize="18" />

        <Label
            x:Name="musicInfo"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="40,0,0,0"
            VerticalContentAlignment="Bottom"
            FontSize="18" />

        <Label
            x:Name="continentImg"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Margin="40,0,0,0" />

        <Button
            Grid.Row="4"
            Grid.Column="4"
            Click="GoToSite"
            Content="Przejdź do Quizu &gt;&gt;"
            Cursor="Hand"
            FontSize="22"
            FontWeight="Bold"
            Foreground="Black" />
    </Grid>
</Page>
