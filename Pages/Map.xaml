<Page
    x:Class="odkrywca.Pages.Map"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:odkrywca.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="675"
    d:DesignWidth="1200"
    Background="White"
    FontFamily="Comfortaa"
    WindowTitle="Map"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,8" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Opacity" Value="100" />
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="TextDecorations" Value="None" />
        </Style>
    </Page.Resources>

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Padding="12,20"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Opacity="0.8">
            <Hyperlink NavigateUri="../MainWindow.xaml">&lt;&lt; Powrót do menu</Hyperlink>
        </Label>

        <Border
            Grid.Row="1"
            Grid.RowSpan="4"
            Margin="15"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Opacity="0.6" Color="LightBlue" />
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <StackPanel Orientation="Vertical">
                <Label
                    HorizontalAlignment="Center"
                    BorderBrush="White"
                    Content="Kontynenty"
                    FontSize="30"
                    FontWeight="Bold" />
                <Label>
                    <Hyperlink
                        x:Name="africa"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Afryka
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="south_america"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Ameryka Płd.
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="north_america"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Ameryka Płn.
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="antarctica"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Antarktyda
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="australia"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Australia
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="asia"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Azja
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="europe"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg">
                        Europa
                    </Hyperlink>
                </Label>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="0"
            Grid.RowSpan="6"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="20"
            Padding="5,30"
            CornerRadius="5">
            <Canvas x:Name="map">
                <Canvas.Background>
                    <ImageBrush ImageSource="/Assets/continents.png" />
                </Canvas.Background>
            </Canvas>
        </Border>
    </Grid>
</Page>
