<Page
    x:Class="odkrywca.Pages.Map"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:odkrywca.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="675"
    d:DesignWidth="1200"
    Background="White"
    FontFamily="Comfortaa"
    WindowTitle="Map"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,18" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Opacity" Value="100" />
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="TextDecorations" Value="None" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="#FF34882D" />
                <GradientStop Offset="1" Color="#FF569ECC" />
                <GradientStop Offset="0.333" Color="#FF479488" />
                <GradientStop Offset="0.731" Color="#FF7B9447" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="15,40"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="20">
            <Border.Background>
                <SolidColorBrush Opacity="0.5" Color="LightBlue" />
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <Label
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Opacity="0.8">
                <Hyperlink NavigateUri="../MainWindow.xaml">&lt;&lt; Powrót do menu</Hyperlink>
            </Label>
        </Border>

        <Border
            Grid.Row="1"
            Grid.RowSpan="4"
            Margin="15"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="20">
            <Border.Background>
                <SolidColorBrush Opacity="0.5" Color="LightBlue" />
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <StackPanel Orientation="Vertical">
                <StackPanel.Effect>
                    <DropShadowEffect />
                </StackPanel.Effect>
                <Label
                    HorizontalAlignment="Center"
                    Content="Kontynenty"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="Aqua" />
                <Label>
                    <Hyperlink
                        x:Name="africa"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="africa">
                        Afryka
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="south_america"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="south_america">
                        Ameryka Płd.
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="north_america"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="north_america">
                        Ameryka Płn.
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="antarctica"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="antarctica">
                        Antarktyda
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="australia"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="australia">
                        Australia
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="asia"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="asia">
                        Azja
                    </Hyperlink>
                </Label>
                <Label>
                    <Hyperlink
                        x:Name="europe"
                        Click="GoToSite"
                        MouseEnter="changeImage"
                        MouseLeave="BackToBaseImg"
                        Tag="europe">
                        Europa
                    </Hyperlink>
                </Label>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="0"
            Grid.RowSpan="6"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="20"
            Padding="0,50">
            <Canvas x:Name="map">
                <Canvas.Background>
                    <ImageBrush ImageSource="/Assets/continents.png" />
                </Canvas.Background>
            </Canvas>
        </Border>
    </Grid>
</Page>
