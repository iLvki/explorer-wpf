<Page x:Class="odkrywca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:odkrywca"
        mc:Ignorable="d"
        FontFamily="Comfortaa"
        WindowTitle="Menu" 
        Height="675" 
        Width="1200"
        Background="White"
        ShowsNavigationUI="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Tytuł w menu -->
        <Label Content="O D K R Y W C A" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="75" FontFamily="Comfortaa" FontWeight="Bold"/>
        <!-- Przycisk do mapy -->
        <Border Grid.Row="2" Grid.Column="2" Width="200" Height="70" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Padding="4">
            <Button x:Name="mapBtn" FontWeight="Bold" FontSize="30" Background="Transparent" BorderThickness="0">
                <Hyperlink NavigateUri="/Pages/Map.xaml">Mapa</Hyperlink>
            </Button>
        </Border>
        <!-- Przycisk do źródeł -->
        <Border Grid.Row="3" Grid.Column="2" Width="200" Height="70" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Padding="4">
            <Button x:Name="sourceBtn" FontWeight="Bold" FontSize="30" Background="Transparent" BorderThickness="0">
                <Hyperlink NavigateUri="/Pages/Sources.xaml">Źródła</Hyperlink>
            </Button>
        </Border>
        <!-- Przycisk do zamknięcia programu -->
        <Border Grid.Row="4" Grid.Column="2" Width="200" Height="70" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Padding="4">
            <Button x:Name="closeBtn" Click="closeBtn_Click" Content="Wyjdź" FontWeight="Bold" FontSize="30" Background="Transparent" BorderThickness="0"/>
        </Border>
    </Grid>
</Page>
