<Page
    x:Class="odkrywca.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:odkrywca"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="675"
    d:DesignWidth="1200"
    Background="White"
    FontFamily="Comfortaa"
    ShowsNavigationUI="False"
    WindowHeight="1080"
    WindowTitle="Menu"
    WindowWidth="1920"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Opacity="0.3" Color="LightBlue" />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Opacity="0.6" Color="LightBlue" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background.png" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tytuł w menu  -->
        <Label
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="O D K R Y W C A"
            FontFamily="Comfortaa"
            FontSize="100"
            FontWeight="Bold">
            <Label.Effect>
                <DropShadowEffect />
            </Label.Effect>
            <Label.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FF1BB24B" />
                    <GradientStop Offset="1" Color="#FFE19726" />
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <!--  Przycisk do mapy  -->
        <Border
            Grid.Row="2"
            Grid.Column="2"
            MaxWidth="300"
            MaxHeight="105"
            Padding="4"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <Button
                x:Name="mapBtn"
                Background="Transparent"
                BorderThickness="0"
                FontSize="40"
                FontWeight="Bold">
                <Hyperlink NavigateUri="/Pages/Map.xaml">Mapa</Hyperlink>
            </Button>
        </Border>
        <!--  Przycisk do źródeł  -->
        <Border
            Grid.Row="3"
            Grid.Column="2"
            MaxWidth="300"
            MaxHeight="105"
            Padding="4"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <Button
                x:Name="sourceBtn"
                Background="Transparent"
                BorderThickness="0"
                FontSize="40"
                FontWeight="Bold">
                <Hyperlink NavigateUri="/Pages/Sources.xaml">Źródła</Hyperlink>
            </Button>
        </Border>
        <!--  Przycisk do zamknięcia programu  -->
        <Border
            Grid.Row="4"
            Grid.Column="2"
            MaxWidth="300"
            MaxHeight="105"
            Padding="4"
            BorderBrush="White"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
            <Button
                x:Name="closeBtn"
                Background="Transparent"
                BorderThickness="0"
                Click="closeBtn_Click"
                Content="Wyjdź"
                Cursor="Hand"
                FontSize="40"
                FontWeight="Bold" />
        </Border>
    </Grid>
</Page>
